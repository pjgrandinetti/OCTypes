# Doxyfile for OCTypes (used by Sphinx/Breathe)

# Project
PROJECT_NAME           = "OCTypes"
PROJECT_BRIEF          = "A lightweight library for object-oriented programming in C"
OUTPUT_DIRECTORY       = doxygen
INPUT                  = ../src
RECURSIVE              = YES
FULL_PATH_NAMES        = NO
STRIP_FROM_PATH        = ../src

# Input files
FILE_PATTERNS          = *.h *.c
EXCLUDE_PATTERNS       =

# Extraction
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO   # Do not extract private members
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = NO
INTERNAL_DOCS          = NO   # Do not include @internal sections

# Documentation style
JAVADOC_AUTOBRIEF      = YES
QT_AUTOBRIEF           = NO
OPTIMIZE_OUTPUT_FOR_C  = YES
MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES
MULTILINE_CPP_IS_BRIEF = YES
STRIP_CODE_COMMENTS    = NO  # Breathe needs comments

# Preprocessor
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO
SKIP_FUNCTION_MACROS   = NO

# Output formats (only XML for Breathe)
GENERATE_HTML          = NO
GENERATE_LATEX         = NO
GENERATE_XML           = YES
XML_OUTPUT             = xml  # Relative to OUTPUT_DIRECTORY
XML_PROGRAMLISTING     = YES  # Important for Breathe

# Warnings
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES # Good for finding missing docs
WARN_NO_PARAMDOC       = YES # Good for finding missing param docs
WARN_AS_ERROR          = NO

# Dot (Graphviz)
HAVE_DOT               = NO # Set to YES if you want graphs and have Graphviz
